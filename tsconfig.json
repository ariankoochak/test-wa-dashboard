{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDeclarationOnly": false,
        "jsx": "react",
        "lib": ["dom", "esnext"],
        "module": "ESNext",
        "target": "ES5",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "dist",
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}