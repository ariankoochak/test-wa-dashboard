{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "strict": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["**/*.css", "node_modules", "dist"]
}